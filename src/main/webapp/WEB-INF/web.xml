<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         version="5.0">

    <welcome-file-list>
        <welcome-file>debut.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>SimpleServlet</servlet-name>
        <servlet-class>monprojet.SimpleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SimpleServlet</servlet-name>
        <url-pattern>/SimpleServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AccesContextServlet</servlet-name>
        <servlet-class>monprojet.AccesContextServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AccesContextServlet</servlet-name>
        <url-pattern>/AccesContextServlet</url-pattern>
    </servlet-mapping>
    
    <context-param>
        <description>Nom du webmaster</description>
        <param-name>webmaster</param-name>
        <param-value>Douae essadiki</param-value>
    </context-param>

    <context-param>
        <description>Email du webmaster</description>
        <param-name>email</param-name>
        <param-value>douae@ess.com</param-value>
    </context-param>
    
    <servlet>
        <servlet-name>AdditionServlet</servlet-name>
        <servlet-class>monprojet.AdditionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdditionServlet</servlet-name>
        <url-pattern>/AdditionServlet</url-pattern>
    </servlet-mapping>
    
</web-app>

